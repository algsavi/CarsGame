@page
@using CarsGame.Application;
@using CarsGame.Domain.Car;
@using CarsGame.Infrastructure;

@model CarsGame.WebApp.Pages.Game.GameTryModel
@inject CarService CarService

@{
}

<form method="post">
    <p>What's the price for this car?</p>

    <div class="form-group">
        <label asp-for="Car.Make"></label>
        <input asp-for="Car.Make" class="form-control" />
        <span asp-validation-for="Car.Make" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Model"></label>
        <input asp-for="Car.Model" class="form-control" />
        <span asp-validation-for="Car.Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Year"></label>
        <input asp-for="Car.Year" class="form-control" />
        <span asp-validation-for="Car.Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Doors"></label>
        <input asp-for="Car.Doors" class="form-control" />
        <span asp-validation-for="Car.Doors" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Color"></label>
        <input asp-for="Car.Color" class="form-control" />
        <span asp-validation-for="Car.Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>What's the price?</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Car.Price" class="text-danger"></span>

        <button type="submit" class="btn btn-success">Try</button>
    </div>
</form>
